!!!
%html{html_attrs}
%head
  %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
  %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon"}
  %title= "#{page_title + ' - ' unless page_title.blank?}#{t(:app_name)}"
  = stylesheet_link_tag 'cupertino/jquery-ui.css'
  = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
  = stylesheet_link_tag 'compiled/print.css', :media => 'print'
  = javascript_include_tag 'jquery'
  = javascript_include_tag 'jquery-ui'
  = javascript_include_tag 'jquery-color'
  = javascript_include_tag 'date'  
  = javascript_include_tag 'jquery.datePicker-2.1.2'
  = javascript_include_tag 'application'
  /[if IE]
    = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
  = yield :unobtrusive_javascript
%body{:class => body_class}
  #container
    #header
      %h1
        = link_to "I'm Busy With...", root_url
      #navbar
        %ul
          - unless current_user
            %li
              = link_to "Login", login_path
            %li
              = link_to "Register", new_user_path 
          - else
            %li
              = link_to current_user.login, profile_path(current_user.login)
            %li
              = link_to "Log out", logout_path  
      = render :partial => 'layouts/flashes'
    #content
      = yield
