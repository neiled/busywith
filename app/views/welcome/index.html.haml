%html{html_attrs}
%head
  %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
  %link{ :rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon"}
  %title= "Busywith.com - What's my team doing?!"
  = stylesheet_link_tag 'compiled/welcome.css'
  %script{:src => 'http://www.google.com/jsapi?key=ABQIAAAA9PVdi6OTkajQVyMoI3hv6RTPte5IkMv6YO0Qn70prbC3lXMUQBSnG8VdqcEiCOJ23nYjwHx_iJb9uQ'}
  %script{:src => 'http://www.google.com/jsapi?key=ABQIAAAA9PVdi6OTkajQVyMoI3hv6RREih2AnShy9hMJC_8gVX6vDz0I5xS14rYAFBQxUz6VT_bvcheaFWP6ZQ'}  
  = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery?
  %meta{'name' => "verify-v1", :content => '5sD8T61OQDV7PQnROBLbTZoU8iqV3+96sC+RruHOOJc='}

%body{:class => body_class}  
  #box
    = render :partial => 'layouts/flashes'
    #logo
      %img{:alt=>"Busywith logo", :src=>"/images/bw_logo_bee.png"}
    %h1 Find out
    %ul
      %li What everyone is working on
      %li How much progress they've made
      %li When they'll be finished
    
    #subtitle
      %img{:alt=>"Busywith.com - What's my team doing?!", :src=>"/images/subtitle.png"}
  
    #notify_me
      %p Hello, it's not quite ready yet. If you'd like to be notified when the site launches then please fill in your email address. I'll only email you when we launch, promise.
      - form_tag beta_signup_path, :id => "email_notify" do
        = label_tag "email", "Email Address"
        = text_field_tag "email"
        = image_submit_tag "/images/button_gloss_notify_me.png", :alt => "Notify me", :class => "image_button"
    
    #footer
      (c) Copyright 2009-2010.
      = link_to "blog", "http://blog.busywith.com"

  = javascript_tag "google.load('jquery', '1.4.0');"
  = javascript_tag "google.load('jqueryui', '1.7.2');"    
  = javascript_include_tag 'jquery-color'
  = javascript_include_tag 'application'
  