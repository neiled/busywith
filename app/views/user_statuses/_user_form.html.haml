%ul
  %li.current_task
    = f.label :current_task, "Current Task"
    = f.text_field :current_task
  %li.current_project
    - if  user.all_teams.count > 0 
      = f.label :project_id
      = f.collection_select :project_id, user.projects, :id, :name, {:include_blank => true}
  %li.percent_complete
    = f.label :percent_complete, "Percent Complete"
    #progress_slider
    = f.text_field :percent_complete, :id => :percent_complete, :value => user_status.percent_complete.to_i.to_s
  %li.estimated_complete
    = f.label :estimated_completion, "Due"
    = f.text_field :estimated_completion, :value => due_date(user)
