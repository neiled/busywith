%h1
  = h(@team.name)

- if true
  //= link_to "Edit", edit_team @team
  = link_to "Edit", edit_team_url(@team)
  
%h2 Members

- @team.memberships.each do |membership|
  = membership.user.login
  = link_to "Remove", :action => "delete", :controller => "memberships", :membership_id => membership unless membership.is_administrator
%br

%h2 Invite a new member

- form_tag(:action => "create", :controller => "memberships") do
  = label_tag "Username"
  = text_field_tag "username"
  = hidden_field_tag "team_id", @team.id
  = submit_tag "Invite"